#!/usr/bin/env bash
# Generate all images (thumbnails + previews)
set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo "Generating thumbnails..."
node "$SCRIPT_DIR/thumbnails.js"

echo ""
echo "Generating preview clips..."
node "$SCRIPT_DIR/previews.js"

echo ""
echo "All images generated successfully"
